{% extends "base.html.twig" %}

{% block content %}
<div class="container-fluid p-0">
  <div class="container pt-5">
    <div class="row">
      <div class="col-lg-3 pe-5">
        {% include 'shared/menu.html.twig' %}
      </div>
      <div class="col-lg-9">
        <div class="mt-3">
          <h5 class="card-header-title">Adresse</h5>
        </div>
        {{ form_start(editaddressForm,
        {'action': path('user_change_address'), 'method': 'POST','attr': { 'novalidate': 'novalidate' }}) }}
        <div class="row mt-4 mb-4">
          {% for message in app.flashes('success-adress') %}
          <div class="flash-notice text-start px-4">
            <div class="alert alert-success " role="alert">
              {{ message }}
            </div>
          </div>
          {% endfor %}
          <label class="col-sm-3 col-form-label form-label">Lieu</label>
          <div class="col-sm-9">
            <div class="mb-2">
              {{ form_widget(editaddressForm.country, { 'attr': {'placeholder': 'Pays'} }) }}
              {{ form_errors(editaddressForm.country) }}
            </div>
            <div class="mb-2">
              {{ form_widget(editaddressForm.city, { 'attr': {'placeholder': 'Ville'} }) }}
              {{ form_errors(editaddressForm.city) }}
            </div>
            <div class="mb-0">
              {{ form_widget(editaddressForm.street, { 'attr': {'placeholder': 'Rue'} }) }}
              {{ form_errors(editaddressForm.street) }}
            </div>
          </div>
        </div>
        <div class="row mb-4">
          <label class="col-sm-3 col-form-label form-label">Adresse</label>
          <div class="col-sm-9">
            {{ form_widget(editaddressForm.adress, { 'attr': {'placeholder': 'Adresse*'} }) }}
            {{ form_errors(editaddressForm.adress) }}
          </div>
        </div>

        <div class="row mb-4">
          <label for="zipCodeLabel" class="col-sm-3 col-form-label form-label">Code postale</label>
          <div class="col-sm-9">
            {{ form_widget(editaddressForm.zipcode, { 'attr': {'placeholder': 'Code postale*'} }) }}
            {{ form_errors(editaddressForm.zipcode) }}
          </div>
        </div>
        <div class="row mb-3">
          <div class="home-card-footer mx-2">
            <div class="d-flex justify-content-end px-4">
              <button type="submit" class="btn btn-ioacademy">Valider</button>
            </div>
          </div>
        </div>
        {{ form_end(editaddressForm) }}
      </div>
    </div>
  </div>
  {% endblock %}