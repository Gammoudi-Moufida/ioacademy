{% extends "base.html.twig" %}

{% block content %}
<div class="container-fluid p-0">
  <div class="container pt-5">
    <div class="row">
      <div class="col-lg-3 pe-5">
        {% include 'shared/menu.html.twig' %}
      </div>
      <div class="col-lg-9 ">
        <div class="mt-3">
          <h5 class="card-header-title">Mot de passe de compte</h5>
        </div>
        {{ form_start(password_form,
        {'action': path('user_change_password'), 'method': 'POST','attr': { 'novalidate': 'novalidate' }}) }}
        <div class="row mt-4 mb-4">
          {% for message in app.flashes('success') %}
          <div class="flash-notice text-start px-3">
            <div class="alert alert-success" role="alert">
              {{ message }}
            </div>
          </div>
          {% endfor %}
          <label class="col-sm-3 col-form-label form-label">Ancien mot de passe </label>
          <div class="col-sm-9">
            {{ form_widget(password_form.oldPassword) }}
            {{ form_errors(password_form.oldPassword) }}
          </div>
        </div>
        <div class="row mb-4">
          <label class="col-sm-3 col-form-label form-label">Nouveau mot de passe</label>
          <div class="col-sm-9">
            {{ form_widget(password_form.password.first) }}
            {{ form_errors(password_form.password.first) }}
          </div>
        </div>
        <div class="row mb-4">
          <label class="col-sm-3 col-form-label form-label">Repeter mot de passe</label>
          <div class="col-sm-9">
            <div class="mb-3">
              {{ form_widget(password_form.password.second) }}
              {{ form_errors(password_form.password.second) }}
            </div>
            <h5>Exigences relatives au mot de passe:</h5>
            <p class="card-text small">S'assurer que ces exigences sont respectées:</p>
            <ul class="small">
              <li>Minimum 6 caractères.</li>
              <li>Contient au moins un chiffre.</li>
            </ul>
          </div>
        </div>
        <div class="home-card-footer p-2">
          <div class="d-flex justify-content-end gap-3">
            <button class="btn btn-secondary" type="reset">Annuler</button>
            <button class="btn btn-ioacademy" type="submit">Changer</button>
          </div>
        </div>
        {{ form_end(password_form)}}
      </div>
    </div>
  </div>
</div>
{% endblock %}