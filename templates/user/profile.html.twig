{% extends "base.html.twig" %}

{% block content %}
<div class="container-fluid p-0">
  <div class="container pt-5">
    <div class="row">
      <div class="col-lg-3 pe-5">
        {% include 'shared/menu.html.twig' %}
      </div>
      <div class="col-lg-9">
        <div class="mt-3">
          <h5 class="card-header-title">Informations personnelles</h5>
        </div>
        {{ form_start(editprofileForm,
        {'action': path('user_profile'), 'method': 'POST','attr': { 'novalidate': 'novalidate' }}) }}
        {% for message in app.flashes('success-profil') %}
        <div class="flash-notice text-start py-2">
          <div class="alert alert-success " role="alert">
            {{ message }}
          </div>
        </div>
        {% endfor %}
        <div class="d-flex flex-row bd-highlight mb-4">
          <label for="pictureLabel" class="bd-highlight col-3 col-form-label form-label align-self-center">Changer
            Photo</label>
          <div class="p-2 bd-highlight">
            <div class="avatar-circle text-center">
              {% if app.user.picture is null %}
              <img id="img_preview" class="avatar-img" src="{{asset('images/userprofile/default.jpg')}}"
                alt="Image Description">
              {% else %}
              <img id="img_preview" class="avatar-img" src="{{asset('images/userprofile/'~ app.user.picture)}}"
                alt="Image Description">
              {% endif %}
            </div>
          </div>
          <div class="p-2 bd-highlight align-self-center">
              <label  class="custom-select-pic">
                {{ form_widget(editprofileForm.picture) }}
              </label>
              {{ form_errors(editprofileForm.picture) }}
          </div>
        </div>
        <div class="row mb-4">
          <label for="firstNameLabel" class="col-sm-3 col-form-label form-label">
            Nom & Prenom
          </label>
          <div class="col-sm-9">
            <div class="input-group">
              {{ form_widget(editprofileForm.firstName, { 'attr': {'placeholder': 'Nom*'} }) }}
              {{ form_errors(editprofileForm.firstName) }}
              {{ form_widget(editprofileForm.lastName, { 'attr': {'placeholder': 'Prenom*'} }) }}
              {{ form_errors(editprofileForm.lastName) }}
            </div>
          </div>
        </div>
        <div class="row mb-4">
          <label for="emailLabel" class="col-sm-3 col-form-label form-label">Email</label>
          <div class="col-sm-9">
            {{ form_widget(editprofileForm.mail, { 'attr': {'placeholder': 'Mail*'} }) }}
            {{ form_errors(editprofileForm.mail) }}
          </div>
        </div>
        <div class="row mb-4">
          <label for="phoneLabel" class="col-sm-3 col-form-label form-label">Télephone</label>
          <div class="col-sm-9">
            <div class="input-group">
              {{ form_widget(editprofileForm.numTel, { 'attr': {'placeholder': 'Téléphone*'} }) }}
              {{ form_errors(editprofileForm.numTel) }}
            </div>
          </div>
        </div>
        <div class="row mb-4">
          <label class="col-sm-3 col-form-label form-label">Biographie</label>
          <div class="col-sm-9">
            <div class="input-group">
              {{ form_widget(editprofileForm.biography) }}
              {{ form_errors(editprofileForm.biography) }}
            </div>
          </div>
        </div>
        <div class="row mt-4 mb-4">
          <label class="col-sm-3 col-form-label form-label">Lieu</label>
          <div class="col-sm-9">
            <div class="input-group">
              {{ form_widget(editprofileForm.country, { 'attr': {'placeholder': 'Pays'} }) }}
              {{ form_errors(editprofileForm.country) }}
         
              {{ form_widget(editprofileForm.city, { 'attr': {'placeholder': 'Ville'} }) }}
              {{ form_errors(editprofileForm.city) }}
           
              {{ form_widget(editprofileForm.street, { 'attr': {'placeholder': 'Rue'} }) }}
              {{ form_errors(editprofileForm.street) }}
            </div>
          </div>
        </div>
        <div class="row mb-4">
          <label class="col-sm-3 col-form-label form-label">Adresse</label>
          <div class="col-sm-9">
            <div class="input-group">
              {{ form_widget(editprofileForm.adress, { 'attr': {'placeholder': 'Adresse'} }) }}
              {{ form_errors(editprofileForm.adress) }}
              {{ form_widget(editprofileForm.zipcode, { 'attr': {'placeholder': 'Code postale'} }) }}
              {{ form_errors(editprofileForm.zipcode) }}
            </div>
            
          </div>
        </div>
        <div class="row mb-4">
          <label class="col-sm-3 col-form-label form-label">Diplôme</label>
          <div class="col-sm-9">
            <div class="input-group">
              {{ form_widget(editprofileForm.diploma, { 'attr': {'placeholder': 'Diplôme'} }) }}
              {{ form_errors(editprofileForm.diploma) }}
              {{ form_widget(editprofileForm.speciality, { 'attr': {'placeholder': 'Spécialité'} }) }}
              {{ form_errors(editprofileForm.speciality) }}
              {{ form_widget(editprofileForm.university, { 'attr': {'placeholder': 'Université'} }) }}
              {{ form_errors(editprofileForm.university) }}
             
            </div>
          </div>
        </div>
        <div class="row mb-4">
          <label for="zipCodeLabel" class="col-sm-3 col-form-label form-label">Profession</label>
          <div class="col-sm-9">
            {{ form_widget(editprofileForm.profession, { 'attr': {'placeholder': 'Profession'} }) }}
            {{ form_errors(editprofileForm.profession) }}
          </div>
        </div>
        <div class="row mb-4">
          <label for="zipCodeLabel" class="col-sm-3 col-form-label form-label">Expérience</label>
          <div class="col-sm-9">
            {{ form_widget(editprofileForm.experience, { 'attr': {'placeholder': 'Expérience'} }) }}
            {{ form_errors(editprofileForm.experience) }}
          </div>
        </div>
        <div class="row mb-4">
          <label for="zipCodeLabel" class="col-sm-3 col-form-label form-label">Objectif</label>
          <div class="col-sm-9">
            <div class="input-group">
            {{ form_widget(editprofileForm.professionalGoal, { 'attr': {'placeholder': 'Profession'} }) }}
            {{ form_errors(editprofileForm.professionalGoal) }}
            {{ form_widget(editprofileForm.sectorGoal, { 'attr': {'placeholder': 'Secteur'} }) }}
            {{ form_errors(editprofileForm.sectorGoal) }}
            </div>
          </div>
        </div>
        <div class="home-card-footer p-2">
          <div class="d-flex justify-content-end gap-3">
            <button type="submit" class="btn btn-ioacademy">Modifier</button>
          </div>
        </div>
        {{ form_end(editprofileForm) }}
      </div>
    </div>
  </div>
</div>
{% endblock %}