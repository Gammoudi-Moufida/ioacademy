<div class="card radius shadow h-100">
              <div class="card-pinned">
                <div class="p-2">
                  {% if formation.image is null %}
                  <img src="{{asset('images/formation/defaultformation.jpg')}}"
                  class="card-img-top rounded-img-5 img-card-size" alt="course">
                  {% else %}
                  <img src="{{asset('images/formation/' ~ formation.image)}}"
                  class="card-img-top rounded-img-5 img-card-size " alt="course">
                  {% endif %}
                </div>
              </div>
              <div class="card-body">
                <div class="mb-3">
                  <small class="card-subtitle">{{formation.category.name}}</small>
                    {% if (formation.skills == "Débutant") %}
                    <span class="badge bg-success float-end">Débutant</span>
                    {% elseif (formation.skills == "Amateur") %}
                    <span class="badge bg-warning float-end">Amateur</span>
                    {% else %}
                    <span class="badge bg-danger float-end">Expert</span>
                    {% endif %}
                  <h3 class="card-title">
                    <a class="black-title pt-4 nav-link fs-5 px-0" href="">{{formation.title}}</a>
                  </h3>
                </div>
                <div class="row align-items-center">
                  <div class="col">
                    <div class="avatar-group">
                      <a class="avatar avatar-circle" data-toggle="tooltip" data-placement="top"
                        title="{{ formation.user.lastName}}" href="#">
                        {% if formation.user.picture is null %}
                        <img class="img-fluid avatar-img-feature"
                          src="{{asset('images/userprofile/default.jpg')}}">
                        {% else %}
                        <img class="img-fluid avatar-img-feature"
                          src="{{asset('images/userprofile/'~ formation.user.picture)}}">
                        {% endif %}
                      </a>
                    </div>
                  </div>
                  <div class="col-auto pt-3">
                    <ul class="list-inline list-separator small ms-auto">
                      <li class="list-inline-item">
                        <svg width="16" height="16" fill="currentColor" class="bi bi-book mb-1" viewBox="0 0 16 16">
                          <path
                            d="M1 2.828c.885-.37 2.154-.769 3.388-.893 1.33-.134 2.458.063 3.112.752v9.746c-.935-.53-2.12-.603-3.213-.493-1.18.12-2.37.461-3.287.811V2.828zm7.5-.141c.654-.689 1.782-.886 3.112-.752 1.234.124 2.503.523 3.388.893v9.923c-.918-.35-2.107-.692-3.287-.81-1.094-.111-2.278-.039-3.213.492V2.687zM8 1.783C7.015.936 5.587.81 4.287.94c-1.514.153-3.042.672-3.994 1.105A.5.5 0 0 0 0 2.5v11a.5.5 0 0 0 .707.455c.882-.4 2.303-.881 3.68-1.02 1.409-.142 2.59.087 3.223.877a.5.5 0 0 0 .78 0c.633-.79 1.814-1.019 3.222-.877 1.378.139 2.8.62 3.681 1.02A.5.5 0 0 0 16 13.5v-11a.5.5 0 0 0-.293-.455c-.952-.433-2.48-.952-3.994-1.105C10.413.809 8.985.936 8 1.783z" />
                        </svg> {{ formation.chapters|length }} Chapitres
                      </li>
                    </ul>
                  </div>
                </div>
                {% if (formation.active == 0) %}
                <small class="badge bg-danger rounded-pill">Attend saisie</small>
                {% elseif (formation.active == 1) %}
                <small class="badge bg-warning rounded-pill">Attend validation saisie</small>
                {% elseif (formation.active == 2) %}
                <small class="badge bg-warning rounded-pill">Attent de publication</small>
                {% else %}
                <small class="badge bg-success rounded-pill">Publiée</small>
                {% endif %}
                <div class="row pt-3">
                  <p>{{ formation.description| u.truncate(60, '..') }}</p>
                </div>
