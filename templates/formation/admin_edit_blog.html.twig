{% extends "base.html.twig" %}

{% block content %}
<div class="container-fluid p-0">
  <div class="container pt-5">
    <div class="row">
      <div class="col-lg-3 pe-5">
        {% include 'shared/menu.html.twig' %}
      </div>
      <div class="col-lg-9">
        <div class="py-3">
          <h5 class="card-header-title">Modification de blog</h5>
        </div>
        <div class="row">
          <div class="col py-3">
            <p>Blog <b>{{ blog.title }}</b></p>
          </div>
        </div>
        {{ form_start(blogForm,{'action': path('admin_edit_blog', {'id': blog.id }), 'method': 'POST','attr': { 'novalidate': 'novalidate' }})  }}
        <div class="row mt-4 mb-4">
          {% for message in app.flashes('success-edit-blog') %}
          <div class="flash-notice text-start px-3">
            <div class="alert alert-success" role="alert">
              {{ message }}
            </div>
          </div>
          {% endfor %}
          <label for="emailLabel" class="col-sm-3 col-form-label form-label">Titre</label>
          <div class="col-sm-9">
            {{ form_widget(blogForm.title, { 'attr': {'placeholder': 'Titre*'} }) }}
            {{ form_errors(blogForm.title) }}
          </div>
        </div>
        <div class="row mb-4">
          <label class="col-sm-3 col-form-label form-label">Ordre d'affichage</label>
          <div class="col-sm-9">
            <div class="input-group">
              {{ form_widget(blogForm.orderBlog, { 'attr': {'placeholder': 'Ordre d\'affichage*'} }) }}
              {{ form_errors(blogForm.orderBlog) }}
            </div>
          </div>
        </div>
        <div class="row mb-4">
          <label class="col-sm-3 col-form-label form-label">Contenu</label>
          <div class="col-sm-9">
            <div class="input-group">
              {{ form_widget(blogForm.content, { 'attr': {'placeholder': 'Contenu*'} }) }}
              {{ form_errors(blogForm.content) }}
            </div>
          </div>
        </div>
        <div class="home-card-footer m-3 pb-5">
          <div class="d-flex justify-content-end gap-3">
            <button type="submit" class="btn btn-ioacademy">Modifier</button>
          </div>
        </div>
        {{ form_end(blogForm) }}
      </div>
    </div>
  </div>
</div>
{% endblock %}