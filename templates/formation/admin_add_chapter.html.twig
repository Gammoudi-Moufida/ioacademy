{% extends "base.html.twig" %}

{% block content %}
<div class="container-fluid p-0">
  <div class="container pt-5">
    <div class="row">
      <div class="col-lg-3 pe-5">
        {% include 'shared/menu.html.twig' %}
      </div>
      <div class="col-lg-9">
        {# <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a class="text-dark" href="">Formation en
                attente</a></li>
            <li class="breadcrumb-item"><a class="text-dark text-decoration-none"
                href="{{ path('admin__manage_formation',{ 'id': formation.id})}}">{{formation.title}}</a></li>
          </ol>
        </nav> #}
        <div class="py-3">
          <h5 class="card-header-title">Ajout d'un nouveau chapitre</h5>
        </div>
        {{ form_start(chapterForm,
        {'action': path('admin_add_chapter', {'id': formation.id }), 'method': 'POST','attr': { 'novalidate':
        'novalidate' }}) }}
        <div class="row mt-4 mb-4">
          {% for message in app.flashes('success-add-chapter') %}
          <div class="flash-notice text-start px-3">
            <div class="alert alert-success" role="alert">
              {{ message }}
            </div>
          </div>
          {% endfor %}
          <label for="emailLabel" class="col-sm-3 col-form-label form-label">Titre</label>
          <div class="col-sm-9">
            {{ form_widget(chapterForm.title, { 'attr': {'placeholder': 'Titre*'} }) }}
            {{ form_errors(chapterForm.title) }}
          </div>
        </div>
        <div class="row mb-4">
          <label class="col-sm-3 col-form-label form-label">Ordre d'affichage</label>
          <div class="col-sm-9">
            <div class="input-group">
              {{ form_widget(chapterForm.orderChapter, { 'attr': {'placeholder': 'Ordre d\'affichage*'} }) }}
              {{ form_errors(chapterForm.orderChapter) }}
            </div>
          </div>
        </div>
        <div class="row mb-4">
          <label class="col-sm-3 col-form-label form-label">Description</label>
          <div class="col-sm-9">
            <div class="input-group">
              {{ form_widget(chapterForm.description, { 'attr': {'placeholder': 'Description*'} }) }}
              {{ form_errors(chapterForm.description) }}
            </div>
          </div>
        </div>
        {% for message in app.flashes('success-add-chapter') %}
        <div class="flash-notice text-start px-3">
          <p class="text-success">{{ message }}</p>
        </div>
        {% endfor %}

        <div class="home-card-footer m-3 pb-5">
          <div class="d-flex justify-content-end gap-3">
            <button type="submit" class="btn btn-ioacademy">Ajouter</button>
          </div>
        </div>
        {{ form_end(chapterForm) }}
      </div>
    </div>
  </div>
</div>
{% endblock %}