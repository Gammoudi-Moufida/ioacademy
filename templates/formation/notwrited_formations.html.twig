{% extends "base.html.twig" %}

{% block content %}
<div class="container-fluid p-0">
  <div class="container pt-5 pb-5">
    <div class="row">
      <div class="col-lg-3 pe-5">
        <div class="navbar-expand-lg navbar-light">
          <div id="sidebarNav" class="collapse navbar-collapse navbar-vertical">
            <div class="card flex-grow-1 mb-5 shadow radius border-1">
              <div class="card-body">
                <div class="text-center mb-5">
                  <div class="avatar-circle avatar-g my-3">
                    {% if app.user.picture is null %}
                    <img class="avatar-img" src="{{asset('images/userprofile/default.jpg')}}"
                      alt="Image Description">
                    {% else %}
                    <img class="avatar-img" src="{{asset('images/userprofile/'~ app.user.picture)}}"
                      alt="Image Description">
                    <img class="avatar-status avatar-g-img" src="{{asset('build/images/top-vendor.svg')}}"
                      alt="Image Description" aria-label="Verified user">
                    {% endif %}
                  </div>
                  <h4 class="card-title fs-5 mb-0">{{app.user.firstName ~' '~app.user.lastName}}</h4>
                  <p class="card-text small">{{app.user.mail}}</p>
                </div>
                <h6 class="card-header-title my-3">Compte</h6>
                <ul class="nav nav-sm nav-tabs nav-vertical border-0">
                  <li class="nav-item border-0">
                    <a class="nav-link text-dark" href="{{ path('user_profile') }}">
