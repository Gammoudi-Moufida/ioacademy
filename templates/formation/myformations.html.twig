{% extends "base.html.twig" %}

{% block content %}
<div class="container-fluid p-0">
  <div class="container pt-5 pb-5">
    <div class="row">
      <div class="col-lg-3 pe-5">
        {% include 'shared/menu.html.twig' %}
      </div>
      <div class="col-lg-9 ">
        <div class="mt-3">
          <h5 class="card-header-title">Mes cours</h5>
        </div>
        <div class="row">
          <div class="col pt-3">
            <p>Vous avez publi√© {{ formations|length }} cours sur notre plateforme.</p>
          </div>
          <div class="col-auto float-end"><a class="nav-link text-dark" href="{{ path('user_add_course') }}">
              <button class="btn btn-primary">Ajouter un cours</button>
            </a></div>
        </div>
        <div class="row mb-5">
          {% for formation in pagination %}
          <div class="col-12 col-sm-12 col-md-6 col-lg-4 mb-3 card-group">
            {% include 'formation/card_teacher.html.twig' %}
          </div>
          {% endfor %}
        </div>
        <div class="d-flex justify-content-end">
          <div class="navigation">
            {% do pagination.setPageRange(2) %}
            {{ knp_pagination_render(pagination,'pagination.html.twig') }}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}