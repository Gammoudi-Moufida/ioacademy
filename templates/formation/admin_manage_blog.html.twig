{% extends "base.html.twig" %}

{% block content %}
<div class="container-fluid p-0">
  <div class="container pt-5">
    <div class="row">
      <div class="col-lg-3 pe-5">
        {% include 'shared/menu.html.twig' %}
      </div>
      <div class="col-lg-9">
        <div class="py-3">
          <h5 class="card-header-title">Liste des blogs</h5>
        </div>
        <div class="row">
          <div class="col py-3">
            <p class="fw-bold">{{ chapter.title }}</p>
          </div>
          <div class="col-auto float-end"><a class="nav-link text-dark"
              href="{{ path('admin_add_blog',{ 'id': chapter.id})}}">
              <button class="btn btn-ioacademy">Ajouter un blog</button>
            </a></div>
        </div>
        <div class="row">
          <table class="table">
            <thead>
              <tr>
                <th scope="col">Titre</th>
                <th scope="col">Ordre</th>
                <th scope="col">Publication</th>
                <th scope="col">Status</th>
                <th scope="col">
                  <div class="float-end me-3">Action</div>
                </th>
              </tr>
            </thead>
            <tbody>
              {% for blog in blogs %}
              <tr>
                <td>{{blog.title}}</td>
                <td>{{ blog.orderBlog}}</td>
                <td>{{blog.publicationDate |date('Y-m-d') }}</td>
                <td>
                  {% if blog.active %}
                  <small class="badge bg-success rounded-pill">Active</small>
                  {% else %}
                  <small class="badge bg-danger rounded-pill">Inactive</small>
                  {% endif %}
                </td>
                <td>
                  <div class="float-end">
                    <a href="{{ path('admin_edit_blog', {'id': blog.id }) }}" class="text-decoration-none"
                      title="Modifier blog">
                      <svg width="20" height="20" fill="#8c98a4" class="bi bi-pencil-square me-2 mb-1"
                        viewBox="0 0 16 16">
                        <path
                          d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                        <path fill-rule="evenodd"
                          d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                      </svg>
                    </a>
                    {% if blog.active %}
                    <a href="{{ path('admin_disable_blog', {'id': blog.id }) }}" class="text-decoration-none"
                      title="Désactiver blog">
                      <svg width="20" height="20" fill="#8c98a4" class="bi bi-slash-circle me-2 mb-1"
                        viewBox="0 0 16 16">
                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"></path>
                        <path d="M11.354 4.646a.5.5 0 0 0-.708 0l-6 6a.5.5 0 0 0 .708.708l6-6a.5.5 0 0 0 0-.708z">
                        </path>
                      </svg>
                    </a>
                    {% else %}
                    <a href="{{ path('admin_validate_blog', {'id': blog.id }) }}" class="text-decoration-none"
                      title="Validé blog">
                      <svg width="20" height="20" fill="#8c98a4" class="bi bi-check-square me-2 mb-1"
                        viewBox="0 0 16 16">
                        <path
                          d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
                        <path
                          d="M10.97 4.97a.75.75 0 0 1 1.071 1.05l-3.992 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.235.235 0 0 1 .02-.022z" />
                      </svg>
                    </a>
                    {% endif %}
                  </div>
                </td>
              </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}