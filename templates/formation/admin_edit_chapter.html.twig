{% extends "base.html.twig" %}

{% block content %}
<div class="container-fluid p-0">
  <div class="container pt-5">
    <div class="row">
      <div class="col-lg-3 pe-5">
        {% include 'shared/menu.html.twig' %}
      </div>
      <div class="col-lg-9">
        <div class="py-3">
          <h5 class="card-header-title">Modification de chapitre</h5>
        </div>
        <div class="row">
          <div class="col py-3">
            <p>Chapitre <b>{{ chapter.title }}</b></p>
          </div>
        </div>
        {{ form_start(chapterForm,
        {'action': path('admin_edit_chapter', {'id': chapter.id }), 'method': 'POST','attr': { 'novalidate':
        'novalidate' }}) }}
        <div class="row mt-4 mb-4">
          <label for="emailLabel" class="col-sm-3 col-form-label form-label">Titre</label>
          <div class="col-sm-9">
            {{ form_widget(chapterForm.title, { 'attr': {'placeholder': 'Titre*'} }) }}
            {{ form_errors(chapterForm.title) }}
          </div>
        </div>
        <div class="row mb-4">
          <label class="col-sm-3 col-form-label form-label">Ordre d'affichage</label>
          <div class="col-sm-9">
            <div class="input-group">
              {{ form_widget(chapterForm.orderChapter) }}
              {{ form_errors(chapterForm.orderChapter) }}
            </div>
          </div>
        </div>
        <div class="row mb-4">
          <label class="col-sm-3 col-form-label form-label">Description</label>
          <div class="col-sm-9">
            <div class="input-group">
              {{ form_widget(chapterForm.description) }}
              {{ form_errors(chapterForm.description) }}
            </div>
          </div>
        </div>
        <div class="home-card-footer m-3 pb-5">
          <div class="d-flex justify-content-end gap-3">
            <button type="submit" class="btn btn-ioacademy">Modifier</button>
          </div>
        </div>
        {{ form_end(chapterForm) }}
      </div>
    </div>
  </div>
</div>
{% endblock %}